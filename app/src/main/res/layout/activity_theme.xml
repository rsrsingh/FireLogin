<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeActivity"
    android:background="?attr/fragBack">

    
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/theme_toolbar"
        android:background="?attr/actioncolor"
       app:titleTextColor="?attr/textcolor"
        >

    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/theme_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/theme_toolbar"
        android:background="?attr/viewcolor"
        />
    <Switch
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:id="@+id/theme_switch"
        android:textColor="?attr/textcolor"
        app:layout_constraintTop_toBottomOf="@id/theme_view"
        android:layout_width="match_parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toRightOf="parent"
android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="30dp"
        
        android:layout_height="wrap_content"
        android:text="Dark"
         />
</android.support.constraint.ConstraintLayout>