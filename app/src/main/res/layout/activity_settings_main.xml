<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fragBack"
    tools:context=".SettingsMain">


    <FrameLayout
        android:id="@+id/settingsMain_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/fragBack"
        app:layout_constraintBottom_toTopOf="@id/settingsMain_bannerAds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></FrameLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/settingsMain_bannerAds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5059411314324031/8800393872"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        ads:layout_constraintBottom_toBottomOf="parent"></com.google.android.gms.ads.AdView>



</android.support.constraint.ConstraintLayout>