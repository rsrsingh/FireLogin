<resources>

    <!-- Base application theme. -->
    <!-- light mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#181818</item>
        <item name="colorAccent">#878787</item>

        <item name="cardbackground">#ffffff</item>
        <item name="textcolor">#252525</item>
        <item name="viewcolor">#565656</item>
        <item name="actioncolor">#ffffff</item>
        <item name="fragBack">#ffffff</item>
        <item name="spaceItem">#787878</item>
        <item name="spaceSelected">#000000</item>

        <item name="android:windowAnimationStyle">@null</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Dark mode theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>

        <item name="cardbackground">#1F1F1F</item>
        <item name="textcolor">#ffffff</item>
        <item name="actioncolor">#000000</item>
        <item name="viewcolor">#a9a9a9</item>
        <item name="fragBack">#000000</item>
        <item name="spaceItem">#bababa</item>
        <item name="spaceSelected">#ffffff</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@null</item>

    </style>


    <!-- Transition of window -->
    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <!--Theme for popup menu-->
    <style name="popUpThemeLight" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">#000000</item>
        <item name="android:itemBackground">#ffffff</item>
    </style>

    <style name="popUpThemeDark" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">#ffffff</item>
        <item name="android:itemBackground">#000000</item>
    </style>




</resources>
